//= require_tree ./vendor

.hide
  display none

.moas-header
  background-color #f00
  color #fff
  padding-top 25px
  padding-bottom 25px
  
  img
    width 180px
    height auto
    margin-right 40px
  
  a:hover 
    background-color #f00
  
  .media-body
    padding-left 40px
    border-left 1px solid #fff

.moas-error
  color: red

.moas-footer
  position absolute
  bottom 0
  width 100%
  height 140px
  padding-top 20px
  padding-bottom 20px
  color #777
  border-top 1px solid #ddd
  background-color #f6f6f6
  a
    color #999

html
  position relative
  min-height 100%

body
  margin-bottom 140px

.navbar-nav.nav-justified li
  float none

.carousel-wrap
  border-radius 5px
  padding 10px
  background-color #f6f6f6
  border 1px solid #ddd
  margin-bottom 40px

.carousel
  width 100%
  max-width 960px   // image sizes are 960x480px
  margin-left auto
  margin-right auto

img.the-view
  width 100%

.form-control
  border-radius 0

.save-btn
  margin-top 20px
  border-radius 5px
  width 100%
  color #fff
  background-image linear-gradient(to bottom, #ff534f 0%, #d92e2a 100%)
    
